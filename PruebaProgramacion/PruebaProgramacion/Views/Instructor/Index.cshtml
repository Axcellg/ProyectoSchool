@model List<Instructor>
@{
    ViewData["Title"] = "Instructor";
}

<h1> Instructores </h1>

<div class="text-center">
    <h1 class="display-4">Lista de Instructores</h1>
</div>

<p><a asp-action="Create">Agregar Nuevo</a></p>

<div class="text-Left">

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">Fecha de contratación </th>
                <th scope="col">CreationDate</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.HireDate</td>
                    <td>@item.CreationDate</td>
                </tr>
            }
        </tbody>
    </table>

</div>

